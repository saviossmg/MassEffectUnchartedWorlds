<resources>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/corBranca</item>
        <item name="android:textColorSecondary">@color/corPrata</item>
        <item name="colorControlNormal">@color/textoHint</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/start_gradient_color</item>
    </style>

    <style name="ProgressBarB" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/end_gradient_color</item>
    </style>
</resources>
